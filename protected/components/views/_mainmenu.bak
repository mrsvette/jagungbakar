<script type="text/javascript">
$(function(){
	var url='<?php echo Yii::app()->request->url;?>';
	$('ul[id="menu-main-menu"]').find('a').each(function(){
		if($(this).attr('href')==url)
			$(this).parent().addClass('active');
	});
	$('.navbar-toggle').click(function(){
		$('#menu-link').toggle();
	});
});
</script>
